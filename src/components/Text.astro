---
// Henter parametrene fra Astro.props
const { teksttype="p", stylingclasses="",children } = Astro.props; 
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  p: "text-[16px] lg:text-[22px]",
  p_bold: "text-[16px] lg:text-[22px] font-bold",
  p_smaller: "text-[16px] lg:text-[20px] font-light",
  p_smallest: "text-[14px] lg:text-[16px] text-right",
};

// Alle p bruger mono (Courier) font og sekundær farve
// Brug mono-font, men kun sæt standard-farve hvis brugeren ikke har givet en text-* klasse
const fontClass = "font-mono";
const userHasTextColor = /\btext-(?:primary|secondary|tertiary)-(?:100|400|700)\b/.test(stylingclasses);
const defaultColor = userHasTextColor ? "" : "text-secondary-400";
---
<p class={`${fontClass} ${sizeClasses[teksttype] ?? ""} ${stylingclasses}`}>
  <slot />
</p>