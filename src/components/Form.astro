---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "./Button.astro";
import Terms from "./Terms.astro";
---

<section title="Form">
  <!-- Main form wrapper -->
   <div x-data="{ open: false }">
  <form class="max-w-3xl mx-auto space-y-6 font-mono text-secondary-400 px-5">

    <!-- Section: Name + Email -->
    <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Full name -->
      <div class="flex flex-col">
        <label for="fullname" class="font-bold mb-1">Your full name</label>
        <input
          type="text"
          id="fullname"
          class="border border-black px-3 py-2 focus:outline-none"
        />
      </div>

      <!-- Email -->
      <div class="flex flex-col">
        <label for="email" class="font-bold mb-1">Email address</label>
        <input
          type="email"
          id="email"
          class="border border-black px-3 py-2 focus:outline-none"
        />
      </div>
    </section>

    <!-- Section: Submission title + Upload -->
    <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Submission title -->
      <div class="flex flex-col">
        <label for="title" class="font-bold mb-1">Submission title</label>
        <input
          type="text"
          id="title"
          class="border border-black px-3 py-2 focus:outline-none"
        />
      </div>

      <!-- File upload -->
      <div class="flex flex-col">
        <label for="upload" class="font-bold mb-1">Photo upload</label>
        <label for="upload" class="border border-black px-3 py-2 cursor-pointer underline w-full font-bold text-tertiary-400">
        Click to upload
        <input
          type="file"
          id="upload"
          class="hidden"
        />
      </div>
    </section>

    <!-- Section: Description -->
    <div class="flex flex-col">
      <label for="description" class="font-bold mb-1">Submission description or story</label>
      <textarea
        id="description"
        rows="5"
        class="border border-black px-3 py-2 focus:outline-none"
      ></textarea>
    </div>

    <!-- Terms checkbox -->
    <div class="flex items-center space-x-2">
      <input
        type="checkbox"
        id="terms"
        class="border border-black rounded-none focus:ring-0"
      />
      <label for="terms" class="text-sm">
        I have read and agree to 
        <button 
         x-on:click="open = ! open"
          class="underline font-bold text-tertiary-400"
              >
          the terms and conditions
        </button>.
      </label>
    </div>

    <!-- Submit button -->
    <Button type="submit" variant="secondary">
      SUBMIT YOUR INSTANT
    </Button>
  </form>

  <!-- Include the modal -->
   <div x-show="open">
  <Terms /> 
   </div>
  </div>
</section>
